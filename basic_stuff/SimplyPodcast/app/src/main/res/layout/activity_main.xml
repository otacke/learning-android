<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.simplypodcast.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/explanation"
            android:text="MAIN ACTIVITY/START SCREEN\nHere the user can either listen to a podcast episode (will open a new activity), manage his podcast feeds (will open a new activity) or get the latest updates of his podcasts."

            />

        <LinearLayout style="@style/episode">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Podcast 1, Episode 1"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/podcast1"
                style="@style/button"
                android:text="LISTEN" />

        </LinearLayout>

        <LinearLayout style="@style/episode">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Podcast 1, Episode 2"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/podcast2"
                style="@style/button"
                android:text="LISTEN" />

        </LinearLayout>


        <LinearLayout style="@style/episode">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Podcast 2, Episode 1"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/podcast3"
                style="@style/button"
                android:text="LISTEN" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/update"
                style="@style/button"
                android:layout_marginRight="8dp"
                android:text="UPDATE" />

            <Button
                android:id="@+id/manage"
                style="@style/button"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text="MANAGE" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>